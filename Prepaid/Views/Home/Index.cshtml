@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    app.controller('HomeCtrl', function ($scope, $http) {
        getBetterRooms();
        getWorseRooms();

        function getBetterRooms() {
            $http({
                method: "get",
                withCredentials: true,
                url: "../api/recommendbills/1"
            }).success(function (data, status, headers, config) {
                $scope.BetterItems = data;
            }).error(function (data, status, headers, config) {
                ShowErrModal(data, status);
            });
        }

        function getWorseRooms() {
            $http({
                method: "get",
                withCredentials: true,
                url: "../api/recommendbills/0"
            }).success(function (data, status, headers, config) {
                $scope.WorseItems = data;
            }).error(function (data, status, headers, config) {
                ShowErrModal(data, status);
            });
        }
    });
</script>
<div ng-controller="HomeCtrl" style="width:100%;height:100%;">
    <div style="width:85%;height:100%; background-color:aliceblue;float:left;">

    </div>
    <div style="width:15%;height:100%; background-color:beige;float:left;">
        <div style="width:100%;height:50%;">
            <ul>
                <li style="text-align:center;line-height:40px;" ng-cloak ng-repeat="BetterItem in BetterItems">{{BetterItem.RoomNo}}</li>
            </ul>
            <a href="~/bill/cube?flag=1">更多...</a>
        </div>
        <div style="width:100%;height:50%;background-color:brown;">
            <ul>
                <li ng-cloak ng-repeat="WorseItem in WorseItems">{{WorseItem.RoomNo}}</li>
            </ul>
            <a href="~/bill/cube?flag=0">更多...</a>
        </div>
    </div>
</div>