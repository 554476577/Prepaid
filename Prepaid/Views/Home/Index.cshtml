@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    app.controller('HomeCtrl', function ($scope, $http) {
        getBetterRooms();
        getWorseRooms();

        function getBetterRooms() {
            $http({
                method: "get",
                withCredentials: true,
                url: "../api/recommendbills/1"
            }).success(function (data, status, headers, config) {
                $scope.BetterItems = data;
            }).error(function (data, status, headers, config) {
                ShowErrModal(data, status);
            });
        }

        function getWorseRooms() {
            $http({
                method: "get",
                withCredentials: true,
                url: "../api/recommendbills/0"
            }).success(function (data, status, headers, config) {
                $scope.WorseItems = data;
            }).error(function (data, status, headers, config) {
                ShowErrModal(data, status);
            });
        }
    });
</script>
<style>
    .top, .down {
        width: 100%;
        height: 50%;
        color: #763d00;
        border-bottom:1px solid dotted;
    }

        .top > ul > li, .down > ul > li {
            font-size: 15px;
            line-height: 37px;
            padding-left: 35px;
        }
            .top > ul > li > a {
                color:#339966;
            }
            .down > ul > li > a {
                color:#ff3300;
            }
        .top > h4 {
            margin:0;
            color:#006600;
            padding-top:5px;
            padding-left:5px;
        }
        .down > h4 {
            margin:0;
            color:#993300;
            padding-left:5px;
        }

        .top > a {
            display: block;
            width: 100%;
            font-size: 17px;
            text-align: center;
            padding-top: 13px;
            padding-left:50px;
            border-bottom:1px dotted black;
            padding-bottom:5px;
        }
         .down > a {
            display: block;
            width: 100%;
            font-size: 17px;
            text-align: center;
            padding-top: 13px;
            padding-left:50px;
        }
</style>
<div ng-controller="HomeCtrl" style="width:100%;height:100%;">
    <div style="width:90%;height:100%; background-color:aliceblue;float:left;">

    </div>
    <div style="width:10%;height:100%; background-color:#fff9eB;float:left;">
        <div class="top">
            <h4>优秀用户</h4>
            <ul>
                <li ng-cloak ng-repeat="BetterItem in BetterItems">
                    <a href="~/bill/cube?buildingNo={{BetterItem.BuildingNo}}&roomNo={{BetterItem.RoomNo}}">
                        >&nbsp;{{BetterItem.RoomNo}}&nbsp;&nbsp;[{{BetterItem.RealName}}]
                    </a>
                </li>
            </ul>
            <a href="~/bill/cube?flag=1">更多&nbsp;>></a>
        </div>
        <div class="down">
            <h4>欠费用户</h4>
            <ul>
                <li ng-cloak ng-repeat="WorseItem in WorseItems">
                    <a href="~/bill/cube?buildingNo={{WorseItem.BuildingNo}}&roomNo={{WorseItem.RoomNo}}">
                        >&nbsp;{{WorseItem.RoomNo}}&nbsp;&nbsp;[{{WorseItem.RealName}}]
                    </a>
                </li>
            </ul>
            <a href="~/bill/cube?flag=0">更多&nbsp;>></a>
        </div>
    </div>
</div>