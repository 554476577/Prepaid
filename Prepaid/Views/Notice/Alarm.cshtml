@{
    Layout = "~/Views/Shared/_Header.cshtml";
}
<script type="text/javascript">
    app.controller('NoticeCtrl', function ($scope, $http) {
        $scope.PageSize = 10;
        // 获取报警信息
        var alarmParams = {
            "PageIndex": 1,
            "PageSize": $scope.PageSize
        };
        getAlarmInfos(alarmParams, true);

        function getAlarmInfos(params, isFirstLoadPager) {
            $http({
                method: "get",
                withCredentials: true,
                url: "../api/alarms",
                params: params
            }).success(function (data, status, headers, config) {
                $scope.AlarmItems = data.Items;
                $scope.AlarmRecordCount = data.RecordCount;
                if (isFirstLoadPager) {
                    // 分页数据绑定
                    $("#page4").page('destroy');
                    $("#page4").page({
                        total: $scope.AlarmRecordCount,
                        pageSize: $scope.PageSize,
                        firstBtnText: '首页',
                        lastBtnText: '尾页',
                        prevBtnText: '上一页',
                        nextBtnText: '下一页',
                        showInfo: false,
                        showJump: true,
                        jumpBtnText: '跳转'
                    }).on("pageClicked", function (event, pageIndex) {
                        params.PageIndex = pageIndex + 1;
                        getAlarmInfos(params, false); // 重新绑定数据
                    }).on('jumpClicked', function (event, pageIndex) {
                        params.PageIndex = pageIndex + 1;
                        getAlarmInfos(params, false); // 重新绑定数据
                    });
                }
            }).error(function (data, status, headers, config) {
                ShowErrModal(data, status);
            });
        }
    });
</script>
<div ng-controller="NoticeCtrl" class="content-div">
    <div class="content-table">
        <table class="table">
            <thead>
                <tr>
                    <th width="8%">ID</th>
                    <th width="10%">设备编号</th>
                    <th width="13%">设备名称</th>
                    <th width="18%">故障内容</th>
                    <th width="15%">故障类型</th>
                    <th width="10%">等级</th>
                    <th width="8%">通知方式</th>
                    <th width="18%">时间</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-cloak ng-repeat="item in AlarmItems">
                    <td style="padding:8px 8px;">{{item.ID}}</td>
                    <td>{{item.DeviceNo}}</td>
                    <td>{{item.DeviceName}}</td>
                    <td>{{item.Content}}</td>
                    <td>{{item.Type}}</td>
                    <td>{{item.Level}}</td>
                    <td>{{item.PostType}}</td>
                    <td>{{item.CreateTime|date:"yyyy-MM-dd"}}</td>
                </tr>
            </tbody>
        </table>
        <div class="width center">
            <div id="page4" class="m-pagination m-center"></div>
        </div>
    </div>
</div>