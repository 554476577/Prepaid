@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    app.controller('NoticeCtrl', function ($scope, $http) {
        $scope.PageSize = 10;
        var params = {
            "PageIndex": 1,
            "PageSize": $scope.PageSize
        };

        getAlarmInfos(params, true);

        function getAlarmInfos(params, isFirstLoadPager) {
            $http({
                method: "get",
                withCredentials: true,
                url: "../api/alarms",
                params: params
            }).success(function (data, status, headers, config) {
                $scope.AlarmItems = data.Items;
                $scope.AlarmRecordCount = data.RecordCount;
                if (isFirstLoadPager) {
                    // 分页数据绑定
                    $("#page4").page('destroy');
                    $("#page4").page({
                        total: $scope.AlarmRecordCount,
                        pageSize: $scope.PageSize,
                        firstBtnText: '首页',
                        lastBtnText: '尾页',
                        prevBtnText: '上一页',
                        nextBtnText: '下一页',
                        showInfo: false,
                        showJump: true,
                        jumpBtnText: '跳转'
                    }).on("pageClicked", function (event, pageIndex) {
                        params.PageIndex = pageIndex + 1;
                        getAlarmInfos(params, false); // 重新绑定数据
                    }).on('jumpClicked', function (event, pageIndex) {
                        params.PageIndex = pageIndex + 1;
                        getAlarmInfos(params, false); // 重新绑定数据
                    });
                }
            }).error(function (data, status, headers, config) {
                ShowErrModal(data, status);
            });
        }
    });
</script>

<div ng-controller="NoticeCtrl" class="content-div">
    <div class="top-basic" style="position:relative;height:43px;border-right:transparent;border-left:transparent;">
        <strong style="line-height:35px;">消息通知</strong>
        <div class="search-div" style="padding-right:10px;position:absolute;top:-2px;right:0;">
            <button id="btnAdd" title="添加账号" url="admin/add" class="btn btn-success btn-top" onclick="popFirstWnd(this.id, '添加账号','800','400')">
                <i class=" fa fa-plus" aria-hidden="true"></i>
            </button>
        </div>
    </div>
    <div class="content-table">
        <table class="table">
            <thead>
                <tr>
                    <th width="5%">UUID</th>
                    <th width="10%">用户名</th>
                    <th width="8%">真实姓名</th>
                    <th width="15%">手机号码</th>
                    <th width="15%">是否可控</th>
                    <th width="25%">时间</th>
                    <th width="8%">备注</th>
                    <th width="14%">操作</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-cloak ng-repeat="item in Items">
                    <td>{{item.UUID}}</td>
                    <td>{{item.UserName}}</td>
                    <td>{{item.RealName}}</td>
                    <td>{{item.Phone}}</td>
                    <td>{{item.HasControl}}</td>
                    <td>{{item.CreateTime|date:"yyyy-MM-dd"}}</td>
                    <td>{{item.Remark}}</td>
                    <td>
                        <button type="button" id="btnModify{{$index+1}}" url="admin/modify?uuid={{item.UUID}}" class="btn btn-warning btn-style"
                                onclick="popFirstWnd(this.id, '修改账号信息','800','400')">
                            修改
                        </button>
                        <button type="button" class="btn btn-danger btn-style" ng-click="delete(item.UUID)">删除</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>