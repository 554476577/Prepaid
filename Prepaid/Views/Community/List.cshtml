@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    app.controller('CommunityCtrl', function ($scope, $http) {
        getInfo();
        getBuildingInfo();

        // 获取小区信息
        function getInfo() {
            $http({
                method: "get",
                withCredentials: true,
                url: "../api/communities"
            }).success(function (data, status, headers, config) {
                if (data.Items.length > 0) {
                    $scope.HasItem = true;
                    $scope.Item = data.Items[0];
                } else {
                    $scope.HasItem = false;
                }
            }).error(function (data, status, headers, config) {
                ShowErrModal(data, status);
            });
        }

        // 获取建筑信息列表
        function getBuildingInfo() {
            $http({
                method: "get",
                withCredentials: true,
                url: "../api/buildings"
            }).success(function (data, status, headers, config) {
                $scope.BuildingItems = data.Items;
            }).error(function (data, status, headers, config) {
                ShowErrModal(data, status);
            });
        }

        // 删除建筑信息
        $scope.deleteBuilding = function (uuid) {
            ShowConfirmModal("确定要删除该建筑信息吗？", function () {
                $http({
                    method: "delete",
                    withCredentials: true,
                    url: "../api/buildings/" + uuid
                }).success(function (data, status, headers, config) {
                    ShowTipsModel("建筑信息删除成功！", function () {
                        getBuildingInfo();
                    });
                }).error(function (data, status, headers, config) {
                    ShowErrModal(data, status);
                });
            });
        };
    });
</script>
<div ng-controller="CommunityCtrl" class="content-div">
    @*小区信息*@
    <div style="width:50%;height:100%;background:LightBlue;font-size:14px;float:left;">
        <div ng-if="!HasItem">
            <button type="button" class="btn btn-danger btn-style">
                添加
            </button>
        </div>
        <div ng-if="HasItem">
            <div class="top-basic">
                <strong>小区信息</strong>
            </div>
            <div class="content-table">
                <table class="table">
                    <tr>
                        <td>小区名称</td>
                        <td>{{Item.Name}}</td>
                        <td>小区入住时间</td>
                        <td>{{Item.CheckInTime}}</td>
                    </tr>
                    <tr>
                        <td>总住户</td>
                        <td>{{Item.Capacity}}</td>
                        <td>小区面积</td>
                        <td>{{Item.Area}}</td>
                    </tr>
                    <tr>
                        <td>小区地址</td>
                        <td colspan="3">{{Item.Address}}</td>
                    </tr>
                    <tr>
                        <td>小区描述</td>
                        <td colspan="3">{{Item.Description}}</td>
                    </tr>
                </table>
                <div class="form-group">
                    <label for="Remark">备注</label>
                    <textarea cols="30" rows="3" class="form-control textarea-text" id="Remark" name="Remark" placeholder="请输入备注！"></textarea>
                </div>
                <button type="button" id="btnCommunityModify{{$index+1}}" url="community/modify?uuid={{Item.UUID}}" class="btn btn-danger btn-style" onclick="popDefaultWnd(this.id,'修改小区信息')">
                    修改
                </button>
            </div>
        </div>
    </div>
    @*建筑信息*@
    <div style="width:50%;height:100%;float:left;">
        <div class="top-basic">
            <strong>建筑信息</strong>
        </div>
        <div class="container-fluid">
            <div class="row row-style">
                <div class="search-div" style="float:right;padding-right:10px;">
                    <button id="btnBuildingAdd" title="添加建筑信息" url="building/add" class="btn btn-success btn-top"
                            onclick="popDefaultWnd(this.id,'添加建筑信息')">
                        <i class=" fa fa-plus" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="content-table">
            <table class="table">
                <thead>
                    <tr>
                        <th width="5%">编号</th>
                        <th width="10%">名称</th>
                        <th width="11%">社区名称</th>
                        <th width="11%">描述</th>
                        <th width="11%">楼层</th>
                        <th width="8%">备注</th>
                        <th width="14%">操作</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-cloak ng-repeat="item in BuildingItems">
                        <td>{{item.BuildingNo}}</td>
                        <td>{{item.Name}}</td>
                        <td>{{item.CommunityName}}</td>
                        <td>{{item.Description}}</td>
                        <td>{{item.Floors}}</td>
                        <td>{{item.Remark}}</td>
                        <td>
                            <button type="button" id="btnBuildingModify{{$index+1}}" url="building/modify?uuid={{item.UUID}}"
                                    class="btn btn-warning btn-style" onclick="popDefaultWnd(this.id,'修改建筑信息')">
                                修改
                            </button>
                            <button type="button" class="btn btn-danger btn-style" ng-click="deleteBuilding(item.UUID)">删除</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>