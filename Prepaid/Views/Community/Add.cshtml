@{
    Layout = "~/Views/Shared/_Header.cshtml";
}
<script type="text/javascript">
    app.controller('CommunityCtrl', function ($scope, $http) {
        $('form').on('submit', function (event) {
            var params = {
                "Name": $("#Name").val(),
                "Description": $("#Description").val(),
                "Address": $("#Address").val(),
                "Area": $("#Area").val(),
                "Capacity": $("#Capacity").val(),
                "CheckInTime": $("#CheckInTime").val(),
                "Remark": $("#Remark").val()
            };
            $http({
                method: "post",
                withCredentials: true,
                url: "../api/communities",
                params: params
            }).success(function (data, status, headers, config) {
                ShowTipsModel("新管理小区添加成功！");
            }).error(function (data, status, headers, config) {
                ShowErrModal(data, status);
            });
        });
    });
</script>
<div ng-controller="CommunityCtrl" class="content-div">
    <form role="form">
        <div class="form-group">
            <label for="Name">小区名称</label>
            <input type="text" class="form-control input-text" id="Name" name="Name" placeholder="请输入小区名称！" required>
        </div>
        <div class="form-group">
            <label for="Description">小区描述</label>
            <textarea cols="30" rows="3" maxlength="250" class="form-control textarea-text" id="Description" name="Description" placeholder="请输入小区描述！"></textarea>
        </div>
        <div class="form-group">
            <label for="Address">小区地址</label>
            <input type="text" class="form-control input-text" min="0" id="Address" name="Address" placeholder="请输入小区地址！">
        </div>
        <div class="form-group">
            <label for="Area">小区面积</label>
            <input type="number" min="0.00" step="0.01" class="form-control input-text" id="Area" name="Area" placeholder="请输入小区面积！">
        </div>
        <div class="form-group">
            <label for="Capacity">小区总住户</label>
            <input type="number" min="0" step="1" class="form-control input-text" id="Capacity" name="Capacity" placeholder="请输入小区总住户！">
        </div>
        <div class="form-group">
            <label for="CheckInTime">小区入住时间</label>
            <input type="text" class="form-control input-text" id="CheckInTime" name="CheckInTime" placeholder="请输入入住时间！">
        </div>
        <div class="form-group">
            <label for="Remark">备注</label>
            <textarea cols="30" rows="3" maxlength="200" class="form-control textarea-text" id="Remark" name="Remark" placeholder="请输入备注！"></textarea>
        </div>
        <button class="btn btn-primary btn-style btn-top" type="submit">添加</button><br />
    </form>
</div>