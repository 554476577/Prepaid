@{
    Layout = "~/Views/Shared/_Header.cshtml";
}
<script type="text/javascript">
    app.controller('DeviceTypeCtrl', function ($scope, $http) {
        // 添加设备类型
        $scope.add = function () {
            var params = {
                "Name": $("#Name").val(),
                "Description": $("#Description").val(),
                "Price1": $("#Price1").val(),
                "Price2": $("#Price2").val(),
                "Price3": $("#Price3").val(),
                "Price4": $("#Price4").val(),
                "Price5": $("#Price5").val(),
                "Remark": $("#Remark").val()
            };
            $http({
                method: "post",
                withCredentials: true,
                url: "../api/devicetypes",
                params: params
            }).success(function (data, status, headers, config) {
                ShowTipsModel("设备类型添加成功！", function () {
                    if (window.parent) { // 如果当前窗口存在父窗口，则在父窗口进行跳转
                        window.parent.location.href = "../basic/list";
                    } else {
                        window.location.href = "../basic/list";
                    }
                });
            }).error(function (data, status, headers, config) {
                ShowErrModal(data, status);
            });
        };
    });
</script>
<div ng-controller="DeviceTypeCtrl" class="content-div">
    <form role="form" class="form-div">
        <div class="form-group group-style">
            <label for="Name">类型名称</label>
            <input type="text" class="form-control input-text" id="Name" name="Name" placeholder="请输入类型名称！">
        </div>
        <div class="form-group group-style">
            <label for="Description">类型描述</label>
            <textarea cols="30" rows="3" class="form-control textarea-text" id="Description" name="Description" placeholder="请输入类型描述！"></textarea>
        </div>
        <div class="form-group group-style">
            <label for="Price1">单价1</label>
            <input type="text" class="form-control input-text" id="Price1" name="Price1" placeholder="请输入单价1！">
        </div>
        <div class="form-group group-style">
            <label for="Price2">单价2</label>
            <input type="text" class="form-control input-text" id="Price2" name="Price2" placeholder="请输入单价2！">
        </div>
        <div class="form-group group-style">
            <label for="Price3">单价3</label>
            <input type="text" class="form-control input-text" id="Price3" name="Price3" placeholder="请输入单价3！">
        </div>
        <div class="form-group group-style">
            <label for="Price4">单价4</label>
            <input type="text" class="form-control input-text" id="Price4" name="Price4" placeholder="请输入单价4！">
        </div>
        <div class="form-group group-style">
            <label for="Price5">单价5</label>
            <input type="text" class="form-control input-text" id="Price5" name="Price5" placeholder="请输入单价5！">
        </div>
        <div class="form-group group-style">
            <label for="Remark">备注</label>
            <textarea cols="30" rows="3" class="form-control textarea-text" id="Remark" name="Remark" placeholder="请输入备注信息！"></textarea>
        </div>
    </form>
    <button class="btn btn-primary btn-style btn-top btn-special" ng-click="add()">添加</button><br />
</div>