@{
    Layout = "~/Views/Shared/_Header.cshtml";
}
<script type="text/javascript">
    app.controller('BuildingCtrl', function ($scope, $http) {
        $scope.CommunityTypeName = "请选择小区";
        getInfo();
        getCommunityInfo();

        // 获取建筑信息
        function getInfo() {
            $http({
                method: "get",
                withCredentials: true,
                url: "../api/buildings/" + getQueryString("uuid")
            }).success(function (data, status, headers, config) {
                $scope.Item = data;
            }).error(function (data, status, headers, config) {
                ShowErrModal(data, status);
            });
        }

        // 修改建筑信息
        $scope.modify = function () {
            var params = {
                "UUID": $scope.Item.UUID,
                "BuildingNo": $("#BuildingNo").val(),
                "Name": $("#Name").val(),
                "CommunityName": $("#CommunityName").val(),
                "Description": $("#Description").val(),
                "Floors": $("#Floors").val(),    
                "Remark": $("#Remark").val()
            };
            $http({
                method: "put",
                withCredentials: true,
                url: "../api/buildings/" + getQueryString("uuid"),
                params: params
            }).success(function (data, status, headers, config) {
                ShowTipsModel("建筑信息修改成功！", function () {
                    if (window.parent) { // 如果当前窗口存在父窗口，则在父窗口进行跳转
                        window.parent.location.href = "../Community/list";
                    } else {
                        window.location.href = "../Community/list";
                    }
                });
            }).error(function (data, status, headers, config) {
                ShowErrModal(data, status);
            });
        };
    });
</script>
<div ng-controller="BuildingCtrl" class="content-div">
    <form role="form" class="form-div">
        <div class="form-group group-style">
            <label for="BuildingNo">建筑编号</label>
            <input type="text" class="form-control input-text" id="BuildingNo" name="BuildingNo" value="{{Item.BuildingNo}}" placeholder="请输入建筑编号！">
        </div>
        <div class="form-group group-style">
            <label for="Name">建筑名称</label>
            <input type="text" class="form-control input-text" id="Name" name="Name" value="{{Item.Name}}" placeholder="请输入建筑名称！">
        </div>
        <div class="form-group group-style">
            <label for="CommunityName">社区名称</label>
            <input type="text" class="form-control input-text" id="CommunityName" name="CommunityName" value="{{Item.CommunityName}}" placeholder="请输入社区名称！">
        </div>
        <div class="form-group group-style">
            <label for="Description">建筑描述</label>
            <input type="text" class="form-control input-text" id="Description" name="Description" value="{{Item.Description}}" placeholder="请输入建筑描述！">
        </div>
        <div class="form-group group-style">
            <label for="Floors">楼层总数</label>
            <input type="text" class="form-control input-text" id="Floors" name="Floors" value="{{Item.Floors}}" placeholder="请输入楼层总数！">
        </div>
        <div class="form-group group-style">
            <label for="Remark">备注</label>
            <textarea cols="30" rows="3" class="form-control textarea-text" id="Remark" name="Remark" value="{{Item.Remark}}" placeholder="请输入备注！"></textarea>
        </div>
    </form>
    <button class="btn btn-primary btn-style btn-top btn-special2" ng-click="modify()">修改</button><br />
</div>